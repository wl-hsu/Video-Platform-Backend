<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.video.platform.dao.FollowingGroupDao">

    <select id="getByType" parameterType="java.lang.String" resultType="com.video.platform.domain.FollowingGroup">
        select
            *
        from
            t_following_group
        where
            `type` = #{type}
    </select>

    <select id="getById" parameterType="java.lang.Long" resultType="com.video.platform.domain.FollowingGroup">
        select
            *
        from
            t_following_group
        where
            id = #{id}

    </select>
</mapper>